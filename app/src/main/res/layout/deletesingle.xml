<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"


    >

    <TextView
        android:id="@+id/cou"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Math-407"
        android:textColor="@android:color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795" />

    <TextView
        android:id="@+id/ser"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="12"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/cou"
        app:layout_constraintEnd_toStartOf="@+id/sec"
        app:layout_constraintStart_toEndOf="@+id/cou"
        app:layout_constraintTop_toTopOf="@+id/cou" />


    <TextView

        android:id="@+id/sec"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="A"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ser"
        app:layout_constraintEnd_toStartOf="@+id/selectbox"
        app:layout_constraintStart_toEndOf="@+id/ser"
        app:layout_constraintTop_toTopOf="@+id/ser"
        tools:ignore="DuplicateIds" />

    <CheckBox
        android:text="Select"
        android:id="@+id/selectbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/sec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sec"
        app:layout_constraintTop_toTopOf="@+id/sec" />


</android.support.constraint.ConstraintLayout>